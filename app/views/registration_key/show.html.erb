<div class="card small-12 columns">
  <div class="card-section">
    <div class="row">
        <%= form_for 'fields', url: registration_key_check_path do |f| %>
            <div class="small-6 columns">
                <%= f.label :key %>
                <%= f.text_field :key %>
            </div>
            <div class="small-2 columns" style="float:left;">
                <div class="actions">
                    <%= f.submit "Sign up" %>
                </div>
            </div>
        <% end %>
    </div>
  </div>
</div>
